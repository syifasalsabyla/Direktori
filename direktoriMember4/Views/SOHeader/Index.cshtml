@section Scripts{

    <script>

        var dataTable;

        $(document).ready(function () {
            $('#table_id').DataTable();
            GetTable()

        });

        function GetTable() {
            $.ajax({
                type: 'GET',
                crossDomain: true,
                url: '/api/SOHeader',
                success: function (data) {
                    console.log(data);
                    var table = $('#id_table').DataTable()
                    table.destroy();
                    $('#id_table').DataTable({
                        'paging': true,
                        'lengthChange': false,
                        'searching': true,
                        'ordering': true,
                        'info': true,
                        'scrollX': true,
                        'scrollY': 200,
                        'scrollCollapse': true,
                        'data': data,
                        'columns': [
                            { data: 'memberID' },
                            { data: 'namaMember' },
                            { data: 'tanggal' },
                            
                            {
                                "render": function (data, type, full, meta) {
                                    return '<a class="btn btn-warning" href="/SOHeader/Details/' + full.soHeaderID + '">Details</a>';
                                }
                            },
                            {
                                "render": function (data, type, full, meta) {
                                    return '<a class="btn btn-info" href="/SOHeader/Edit/' + full.soHeaderID + '">Edit</a>';
                                }
                            },
                            {
                                "data": "null",
                                "render": function (data, type, row) {
                                    return "<a class='btn btn-danger btn-sm' onclick=Delete('" + row.soHeaderID + "')><i class='fa fa-trash'></i>Delete</a>";
                                }
                            }
                        ],

                        "pagingType": "full_numbers",
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "Search records",
                        }
                    })
                }
            })
        }

        function Delete(id) {
            swal({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover this imaginary file!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            type: 'DELETE',
                            url: '/api/SOHeader/' + id,
                            success: function (data) {
                                if (data.success) {
                                    swal("Poof! Your imaginary file has been deleted!", {
                                        icon: "success",
                                    });
                                    dataTable.ajax.reload();
                                    
                                }
                            }
                        });
                        
                    } else {
                        swal("Your imaginary file is safe!");
                    }
                    location.reload();
                });
